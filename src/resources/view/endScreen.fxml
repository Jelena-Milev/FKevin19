    <rowConstraints>
        <RowConstraints percentHeight="20.0"/>
        <RowConstraints percentHeight="10.0"/>
        <RowConstraints percentHeight="30.0"/>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
    <children>
        <Label fx:id="congratulationLbl" text="Cestitamo! Osvojio si" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.valignment="BOTTOM">
         <font>
            <Font size="32.0" />
         </font>
        </Label>
        <Label fx:id="points" text="20/30" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.valignment="CENTER">
            <font>
                <Font size="36.0" />
            </font>
        </Label>
        <Label fx:id="pointsLbl" text="poena!" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.valignment="TOP">
