                <Image url="@../img/planet.png" />
            </image>
        </ImageView>
        <ImageView fitHeight="59" fitWidth="195" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.valignment="TOP">
            <image>
                <Image url="@../img/fKevinBody.png" />
            </image>
        </ImageView>
        <ImageView fx:id="head" fitHeight="184" fitWidth="268" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <image>
                <Image url="@../img/fKevinHead.png" />
            </image>
        </ImageView>
        <Button fx:id="pressSpace" mnemonicParsing="false" prefHeight="500" visible="true" GridPane.columnIndex="1" GridPane.rowIndex="5" />
